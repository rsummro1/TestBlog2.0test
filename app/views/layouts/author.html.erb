<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | Testblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
      <%= render 'layouts/navbar' %>  
      <p class="notice"><%= notice %></p>  
      <p class="alert"><%= alert  %></p>  
      <div class="container <%= controller_name %> <%= action_name %>">

      <% if author_signed_in? %>
      <ul>
         <li><%= link_to 'Submit Blog', new_authors_post_path %></li>
         <li><%= link_to 'Account', edit_author_registration_path %><li>
         <li><%= link_to 'Sign out', destroy_author_session_path, :method => :delete %></li>
      </ul>
     <% else %>
      <ul>
         <li><%= link_to 'Sign up', new_author_registration_path %></li>
         <li><%= link_to 'Sign in', new_author_session_path %><li>
      </ul>
     <% end %>
    
    <%= yield %>
  

</body>
</html>
